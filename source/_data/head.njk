<script type="module">
	import '/js/anchor.min.js';
	function addAnchors() {
		const urlPattern = /^\/\d+\/\d+\/\d+\/[^\/]+/;
		if (urlPattern.test(window.location.pathname)) {
			anchors.add();
		}
	}
	document.addEventListener('DOMContentLoaded', () => {
		addAnchors();
	});
	setInterval(() => {addAnchors(); }, 5000);
</script>
